<html>
   
    <head>
        <link href="/stylesheets/patient profile edit.css" rel="stylesheet">

    </head>
    <body>
        <div class="container" id="container">
            <h1>Personal Information</h1>
            <form action="#">
                <div class="img">
                    <input type="image" src="/images/168726.png">
                </div>
            </form>
            <div class="form-container">
                
                <form action="editp" method="post">
                    <div class="row">
                        <div class="label-container">
                            <label for="name">Name :</label>
                        </div>
                        <div class="value-container">
                            <input name="name" type="text">
                        </div>
                    </div>
                    <div class="row">
                        <div class="label-container">
                            <label for="id">ID :</label>
                        </div>
                        <div class="value-container">
                            <label for="name">{{patient_id}}</label>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="label-container">
                            <label for="number">Phone Number :</label>
                        </div>
                        <div class="value-container">
                            <input  name="number" type="number">
                        </div>
                    </div>
                    <div class="row">
                        <div class="label-container">
                            <label for="age">Age :</label>
                        </div>
                        <div class="value-container">
                            <input name="age" type="number">
                        </div>
                    </div>
                    {{#each messages }}
                       <p>{{this}}</p>
                    
                    {{/each}}
                    
                    <button>Confirm Changes</button>
                    
                </form>
            </div>
            <div class="options">
               <div class="options-container">
                <!-- <form class="right-div">
                    <ul>
                        <li class="op"><a href="#">Home</a></li>
                        <li class="op"><a href="#">Arrange an Appointment</a></li>
                        <li class="op"><a href="#">Edit Information</a></li>
                        <li class="op"><a href="#">Log Out</a></li>
                    </ul>
                </form> -->
                </div> 
            </div>
        </div>
    </body>
</html>